//개미 군단

#include <stdio.h>
#include <stdbool.h>
#include <stdlib.h>
//장군개미=5, 병정개미=3, 일개미=1
int solution(int hp) {
    int answer = 0;
    int cnt[3] = {0, 0, 0};
    
    if(hp/5 == 0)
    {
        if(hp/3 == 0) cnt[2] = hp;
        else 
        {
            cnt[1] = hp/3;
            cnt[2] = hp%3;
        }
    }
    else {
        cnt[0] = hp/5;
        cnt[1] = (hp-5*cnt[0])/3;
        cnt[2] = (hp-5*cnt[0])%3;
    }
    
    answer = cnt[0]+cnt[1]+cnt[2];
    return answer;


    /*
    hp/5 로 나눈 값을 answer에 저장
    hp%5를 hp에 저장
    hp/3으로 나눈 값을 answer에 저장
    반복
    */
}